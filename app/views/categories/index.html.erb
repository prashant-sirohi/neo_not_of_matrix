<p id="notice"><%= notice %></p>

<h1>Listing Categories</h1>

<table class= "table table-striped table-hover", style="width:50%">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.i_d %></td>
        <td><%= category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class: "btn btn-raised btn-success" %>
